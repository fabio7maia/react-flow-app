{
	"compilerOptions": {
		"baseUrl": "./src/",
		"outDir": "./dist/",
		"sourceMap": false,
		"declaration": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noImplicitAny": false,
		"module": "commonjs",
		"target": "es6",
		"jsx": "react",
		"typeRoots": ["./node_modules/@types", "./src/custom-typings"]
	},
	"exclude": [
		"dist",
		"**/__tests__/**",
		"**/__stories__/**",
		"node_modules",
		"src/**/storybook/**",
		"src/**/*.tests.*",
		"src/**/*.stories.*"
	]
}
