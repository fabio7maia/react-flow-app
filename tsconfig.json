{
	"extends": "./tsconfig.paths.json",
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist/",
		"sourceMap": false,
		"declaration": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noImplicitAny": false,
		"module": "commonjs",
		"target": "es6",
		"jsx": "react",
		"paths": {
			"@components": ["src/components"],
			"@helpers": ["src/helpers"],
			"@types": ["src/types"]
		},
		"typeRoots": ["./node_modules/@types", "./src/custom-typings"]
	},
	"exclude": ["dist", "**/__tests__/**", "**/__stories__/**", "node_modules"]
}
